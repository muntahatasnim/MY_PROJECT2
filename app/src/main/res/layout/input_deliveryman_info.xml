<?xml version = "1.0" encoding = "utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/medicine"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:focusable="true"
        android:hint="Name"
        android:textColorHint="#000000"
        android:textSize="30dp" />


    <EditText
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:layout_alignParentStart="true" />

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textColorHint="#000000"
        android:layout_alignBottom="@+id/phone"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Phone no"
        android:inputType="phone"
        android:textSize="30dp" />
    <EditText
        android:id="@+id/hometown"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/phone"
        android:layout_alignEnd="@+id/phone"
        android:layout_alignParentStart="true" />
    <EditText

        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textColorHint="#000000"
        android:layout_alignBottom="@+id/hometown"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Home Town"
        android:textSize="30dp" />
    <EditText
        android:id="@+id/workarea"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/hometown"
        android:layout_alignEnd="@+id/hometown"
        android:layout_alignParentStart="true" />
    <EditText

        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textColorHint="#000000"
        android:layout_alignBottom="@+id/workarea"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Area You want to join"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="189dp"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="112dp"
        android:background="#008B8B"
        android:text="Register"
        android:textColor="#000000"
        android:textSize="30dp"
        />

</RelativeLayout>